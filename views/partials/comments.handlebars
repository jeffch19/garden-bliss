<!-- Linking Bootstrap CSS for styling --> 
 <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.6.0/css/bootstrap.min.css"/>
 <!-- Handlebars conditional statement to check if 'this' has content -->
{{#if this}}
   <div class="card text-dark bg-light w-75 mx-5 my-2">
  <!-- Loop through 'this' array or object -->  
  {{#each this}}
    <div class="card-header d-flex justify-content-between align-items-center">

    </div>
    <!-- Card body for main content -->
    <div class="card-body">
      <!-- Placeholder for a card title, currently commented out -->
      {{!-- <h5 class="card-title">Special title treatment</h5> --}}
      <!-- Paragraph element displaying comment text from the 'comment_text' field -->
      <p class="card-text">{{comment_text}}</p>
      <!-- Paragraph displaying the username and formatted creation date -->
      <p class="m-0">-- {{user.username}}, {{format_date createdAt}}</p>
    </div>
  {{/each}}
  </div>
{{/if}}